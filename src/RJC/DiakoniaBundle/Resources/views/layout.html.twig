<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}Diakonia{% endblock %}</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/diakonia/css/base.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/diakonia/css/skin.css') }}" />
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/diakonia/images/apple-touch-icon.png') }}" />
</head>
<body>
    <div class="wrapper">
        <div id="masthead">
            <div class="clearfix header" role="banner">
                <div id="logo">
                    <p>Diakonia</p>
                </div>
                <div class="nav-main">
                     {{ menu('main') }}
                </div>
                <div class="login-control">
                    <span class="icon">&nbsp;</span>
                    <p>Logout</p>
                </div>
            </div>
            <!-- end #masthead -->
        </div>
        <div id="mastheads-seperator"></div>
        <div id="main" class="clearfix">
            <div class="nav-primary">
                {% block nav %}
                {% endblock %}
            </div>
            <div class="content">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>
</body>

</html>
